            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@color/black"
                android:backgroundTint="@color/grey"
                app:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/title_text_card1"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/brand_text_card1"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:gravity="left"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/rating_text_card1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:gravity="left"
                    android:textColor="@color/white" />
                <ImageView
                    android:id="@+id/rating_image1"
                    android:src="@drawable/ic_baseline_star_24"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="60dp"/>

                <TextView
                    android:id="@+id/description_text_card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="120dp"
                    android:gravity="left"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/image_card1"
                    android:layout_width="140dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="220dp"/>

                <TextView
                    android:id="@+id/detail_text_card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="165dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:text="Details >>"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

